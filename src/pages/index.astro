    <meta name="twitter:image" content="https://fss.cool/social.png">
    <meta name="twitter:card" content="summary_large_image">
  </head>
  <body class="bg-background">
    <App client:load updatedAt={parseISO(updatedAt)} repos={repos} />
  </body>
</html>
